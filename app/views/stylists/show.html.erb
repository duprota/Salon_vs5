
<h1><strong><%= @salon.salon_name %></strong></h1>


<h2>Comments</h2>

<% @salon.comments.each do |comment| %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
<% end %>

<h2>Add a comment:</h2>
<%= form_for([@salon, @salon.comments.build]) do |f| %>


  <p>
    <%= f.label :commenter %><br />
    <%= f.text_field :commenter %>
    </p>


    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', salon_path %>
| <%= link_to 'Edit', edit_salon_path(@salon) %>



